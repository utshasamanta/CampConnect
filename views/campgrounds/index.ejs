<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div id="map" style="width: 100%; height: 300px ;" class="mb-3"></div>
<% for (let campground of campgrounds) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if (campground.images.length) { %>
                <img class="img-fluid" crossorigin="anonymous" src="<%= campground.images[0].url %>" alt="" />
            <% } else { %>
                <img class="img-fluid" crossorigin="anonymous" src="https://images.unsplash.com/photo-1504553084479-375d2e14e073?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
            <% } %>
            
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= campground.location %></small>
                </p>
                <a
                    href="/campgrounds/<%= campground._id %>"
                    class="btn btn-primary"
                    >View</a
                >
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    const apiKey = '<%- process.env.MAPTILER_KEY %>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/showClusterMap.js"></script>